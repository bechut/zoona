// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Test {
  id String @id @default(uuid())
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique() @default("") @db.VarChar(255)
  password  String    @default("") @db.VarChar(255)
  status    Boolean   @default(true)
  createdAt DateTime  @default(now()) @db.Timestamptz
  updatedAt DateTime? @db.Timestamptz
  Profile   Profile?
  Tokens    Otp[]
  Players   Player[]
}

enum GENDERS {
  Male
  Female
  Other
}

model Profile {
  id         String   @id @default(uuid())
  first_name String   @default("") @db.VarChar(255)
  last_name  String   @default("") @db.VarChar(255)
  gender     GENDERS?
  age        Int?
  bio        String?
  user_id    String?  @unique
  User       User?    @relation(fields: [user_id], references: [id])
  player_id  String?  @unique
  Player     Player?  @relation(fields: [player_id], references: [id])
}

model Otp {
  id        String   @id @default(uuid())
  value     String   @default("") @db.VarChar(255)
  user_id   String
  User      User     @relation(fields: [user_id], references: [id])
  createdAt DateTime @default(now()) @db.Timestamptz
  expiredAt DateTime @default(now()) @db.Timestamptz
}

model Player {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now()) @db.Timestamptz
  updatedAt DateTime? @db.Timestamptz
  Profile   Profile?
  parent_id String
  Parent    User      @relation(fields: [parent_id], references: [id])
}
